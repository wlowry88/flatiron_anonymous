<p id="notice"><%= notice %></p>

<h3>Title:</h3>
<%= @post.title %>
<h3>Written By: @post.user.name</h3>

<h3>Content:</h3>
<%= @post.content %>

<h3>Comments:</h3>
  <% @post.comments.each do |comment| %>
    <p><%= comment.content %> </p>
  <% end %>

<h4>Post a new comment:</h4>
<%= form_for [@post, Comment.new] do |f| %>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %><br>
    <%= f.hidden_field :post_id, :value => @post.id %>
  </div>

  <div class="actions">
    <%= f.submit %>
<% end %>
  </div>


